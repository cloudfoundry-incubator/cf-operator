#!/bin/bash
set -euo pipefail

GIT_ROOT="${GIT_ROOT:-$(git rev-parse --show-toplevel)}"
. "${GIT_ROOT}/bin/include/versioning"

export DOCKER_IMAGE_TAG=${VERSION_TAG}

if [ -z ${TEST_NAMESPACE+x} ]; then
  TEST_NAMESPACE="test$(date +%s)"
  export TEST_NAMESPACE

  remove_namespaces() {
    namespaces=$(k get ns -o=jsonpath="{..name}" | tr '[[:space:]]' '\n' | grep "$TEST_NAMESPACE")
    for ns in $namespaces; do
      echo "Deleting namespace $ns..."
      kubectl delete namespace --wait=false --grace-period=60 "$ns"
    done
  }
  trap remove_namespaces EXIT
fi

# Add all required CRDÂ´s
bin/apply-crds
kubectl get customresourcedefinitions

# Build the required helm charts to run the cf-operator
./bin/build-helm

NODES=${NODES:-3}
FLAKE_ATTEMPTS=${FLAKE_ATTEMPTS:-3}
ginkgo --nodes="$NODES" --flakeAttempts="$FLAKE_ATTEMPTS" e2e/kube/
