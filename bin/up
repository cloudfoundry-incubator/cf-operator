#!/bin/sh

if type -a minikube >/dev/null 2>/dev/null; then
    dockerenv=`minikube docker-env`
    if [ $? -ne 0 ]; then
        echo "Error: Could not retrieve docker settings from minikube."
        exit 1
    fi
    eval ${dockerenv}
fi

set -e

bin/build-image
bin/build
bin/apply-crds
echo "watching namespace ${CFO_NAMESPACE}"
binaries/cf-operator
