#!/bin/bash

set -euo pipefail

GIT_ROOT=${GIT_ROOT:-$(git rev-parse --show-toplevel)}

BASEDIR="${1:-}"
if [[ "${BASEDIR}" == "" ]]; then
  >&2 echo "missing basedir"
  exit 1
fi
CGO_ENABLED=0 go build -ldflags="-s -w" -o "${BASEDIR}/container-run" code.cloudfoundry.org/cf-operator/container-run/cmd/containerrun
